<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800.0" prefWidth="1300.0" style="-fx-background-radius: 15px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.project.controllers.ChainController">

    <top>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="120.0" BorderPane.alignment="CENTER">
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                        mnemonicParsing="false" onAction="#goToHome" prefHeight="50.0" prefWidth="105.0"
                        styleClass="nav-button" text="Accueil" textAlignment="CENTER" textOverrun="LEADING_ELLIPSIS"
                        wrapText="true" VBox.vgrow="ALWAYS"/>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                <Button contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" onAction="#goToInventaire" prefHeight="50.0"
                        prefWidth="157.0" styleClass="nav-button" text="Inventaire" textAlignment="CENTER"
                        textOverrun="LEADING_ELLIPSIS" wrapText="true" VBox.vgrow="ALWAYS"/>
            </VBox>
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="241.0">
                <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                        minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0"
                        prefWidth="270.0" styleClass="nav-button" text="Chaine de production" wrapText="true"/>
            </VBox>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.7353" prefHeight="200.0" prefWidth="1646.0" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                <TableView fx:id="chaineTableView" fixedCellSize="0.0" nodeOrientation="LEFT_TO_RIGHT"
                           prefHeight="458.0" prefWidth="1649.0" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="chainCode" prefWidth="25.0" styleClass="table-column" text="Code"/>
                        <TableColumn fx:id="chainName" prefWidth="25.0" styleClass="table-column" text="Nom"/>
                        <TableColumn fx:id="chainInput" minWidth="250.0" prefWidth="248.20001220703125"
                                     styleClass="table-column" text="Eléments en entrée"/>
                        <TableColumn fx:id="chainOuput" prefWidth="248.20001220703125" styleClass="table-column"
                                     text="Eléments en sortie"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </HBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0">
                <TextField fx:id="addCode" prefHeight="25.0" prefWidth="305.0" promptText="Code">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="40.0"/>
                    </VBox.margin>
                </TextField>
                <TextField fx:id="addName" promptText="Nom">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </TextField>
                <HBox prefHeight="27.0" prefWidth="287.0">
                    <ComboBox fx:id="comboBoxElementInput" minWidth="135.0" nodeOrientation="LEFT_TO_RIGHT"
                              promptText="Elément">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </ComboBox>
                    <TextField fx:id="quantityInput" promptText="Quantité">
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                        <HBox.margin>
                            <Insets left="10.0" right="10.0"/>
                        </HBox.margin>
                    </TextField>
                </HBox>
                <Button mnemonicParsing="false" onAction="#createInputList" styleClass="action-button-add-chaine"
                        text="+ Nouvel élément" VBox.vgrow="NEVER"/>
                <TextField fx:id="addListInput" promptText="Eléments en entrée">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </TextField>
                <HBox prefHeight="0.0" prefWidth="330.0">
                    <ComboBox fx:id="comboBoxElementOutput" minWidth="135.0" nodeOrientation="LEFT_TO_RIGHT"
                              promptText="Elément">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </ComboBox>
                    <TextField fx:id="quantityOutput" promptText="Quantité">
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                        <HBox.margin>
                            <Insets left="10.0" right="10.0"/>
                        </HBox.margin>
                    </TextField>
                </HBox>

                <Button mnemonicParsing="false" onAction="#createOutputList" styleClass="action-button-add-chaine"
                        text="+ Nouvel élément">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Button>
                <TextField fx:id="addListOutput" promptText="Eléments en sortie">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </TextField>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <VBox prefHeight="200.0" prefWidth="150.0">
                        <HBox.margin>
                            <Insets right="30.0"/>
                        </HBox.margin>
                        <padding>
                            <Insets left="5.0"/>
                        </padding>
                        <Button mnemonicParsing="false" onAction="#clearTextField" prefHeight="29.0"
                                prefWidth="200.0" styleClass="action-button-clear" text="Réinitialiser">
                            <VBox.margin>
                                <Insets bottom="20.0"/>
                            </VBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#modifyChaine" prefHeight="29.0"
                                prefWidth="200.0" styleClass="action-button-mod" text="Modifier">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </Button>
                    </VBox>
                    <VBox prefHeight="200.0" prefWidth="150.0">
                        <padding>
                            <Insets right="5.0"/>
                        </padding>
                        <Button mnemonicParsing="false" onAction="#addChaine" prefHeight="29.0"
                                prefWidth="200.0" styleClass="action-button-add" text="Ajouter"
                                textAlignment="CENTER">
                            <VBox.margin>
                                <Insets bottom="20.0"/>
                            </VBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#delChaine" prefHeight="29.0"
                                prefWidth="200.0" styleClass="action-button-del" text="Supprimer">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </Button>
                    </VBox>
                </HBox>
                <Label fx:id="message" prefHeight="129.0" prefWidth="373.0" styleClass="message" text="">
                    <VBox.margin>
                        <Insets bottom="30.0" top="10.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
        </SplitPane>
    </center>

</BorderPane>
